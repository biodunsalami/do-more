<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.LabelDetailsFragment">

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="37dp"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/Hello_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_semibold"
            android:text="@string/hello"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_semibold"
            tools:text="Oladipupo"
            android:textColor="@color/black"
            android:textSize="20sp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="37dp"
        android:background="@drawable/circular_bg"
        android:backgroundTint="@color/primary_color"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linear_layout1"
        app:layout_constraintBottom_toBottomOf="@+id/linear_layout1"/>

    <TextView
        android:id="@+id/favourite_task_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="62dp"
        android:fontFamily="@font/notosans_medium"
        android:text="@string/favourite_task"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_view_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="37dp"
        app:layout_constraintTop_toTopOf="@+id/favourite_task_label"
        app:layout_constraintBottom_toBottomOf="@+id/favourite_task_label"/>

    <TextView
        android:id="@+id/no_favourite_task_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_have_no_favourite_task"
        android:fontFamily="@font/notosans_medium"
        android:textColor="@color/black"
        android:alpha="0.5"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favourite_task_label"/>


    <ImageView
        android:id="@+id/no_task_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_empty_list_bg"
        app:layout_constraintTop_toBottomOf="@+id/no_favourite_task_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_add"
        android:backgroundTint="@color/primary_color"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="@+id/add_favourites_label"
        app:layout_constraintEnd_toEndOf="@+id/add_favourites_label"
        app:layout_constraintBottom_toTopOf="@+id/add_favourites_label"/>

    <TextView
        android:id="@+id/add_favourites_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_favourites"
        android:fontFamily="@font/notosans_medium"
        android:textColor="@color/black"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>