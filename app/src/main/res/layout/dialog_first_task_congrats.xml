<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="37dp"
        android:layout_marginBottom="120dp"
        android:paddingVertical="37dp"
        android:background="@drawable/curvy_bg"
        android:backgroundTint="@color/light_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/first_task_congratulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_semibold"
            android:text="@string/congratulations_on_setting_up_your_first_task"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/confetti_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_confetti"
            app:layout_constraintTop_toBottomOf="@+id/first_task_congratulation"
            app:layout_constraintStart_toStartOf="@+id/first_task_congratulation"
            app:layout_constraintEnd_toEndOf="@+id/first_task_congratulation"/>


        <TextView
            android:id="@+id/edit_task_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="12dp"
            android:text="@string/edit_task"
            android:fontFamily="@font/notosans_regular"
            android:textSize="16sp"
            android:textColor="@color/primary_color"
            app:drawableEndCompat="@drawable/ic_little_blue_arrow"
            android:drawablePadding="4dp"
            app:layout_constraintStart_toStartOf="@+id/confetti_image_view"
            app:layout_constraintEnd_toEndOf="@+id/confetti_image_view"
            app:layout_constraintTop_toBottomOf="@+id/confetti_image_view"/>


        <Button
            android:id="@+id/close_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:textAllCaps="false"
            android:layout_marginBottom="38dp"
            android:layout_marginHorizontal="70dp"
            android:fontFamily="@font/notosans_semibold"
            android:background="@drawable/curved_rectangle_bg"
            app:layout_constraintTop_toBottomOf="@+id/edit_task_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>