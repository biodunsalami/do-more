<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.LabelsFragment">

    <TextView
        android:id="@+id/select_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_label"
        android:textSize="22sp"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="25dp"
        android:fontFamily="@font/notosans_semibold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginVertical="25dp"
        app:layout_constraintTop_toBottomOf="@+id/select_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/general_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/general"
            android:textSize="18sp"
            android:paddingHorizontal="25dp"
            android:paddingVertical="28dp"
            android:background="@color/white"
            android:fontFamily="@font/notosans_semibold"/>

        <TextView
            android:id="@+id/personal_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/personal"
            android:textSize="18sp"
            android:paddingHorizontal="25dp"
            android:paddingVertical="28dp"
            android:background="@color/white"
            android:fontFamily="@font/notosans_semibold"/>

        <TextView
            android:id="@+id/work_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/work"
            android:textSize="18sp"
            android:paddingHorizontal="25dp"
            android:paddingVertical="28dp"
            android:background="@color/white"
            android:fontFamily="@font/notosans_semibold"/>

        <TextView
            android:id="@+id/school_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/school"
            android:textSize="18sp"
            android:paddingHorizontal="25dp"
            android:paddingVertical="28dp"
            android:background="@color/white"
            android:fontFamily="@font/notosans_semibold"/>

        <TextView
            android:id="@+id/home_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textSize="18sp"
            android:paddingHorizontal="25dp"
            android:paddingVertical="28dp"
            android:background="@color/white"
            android:fontFamily="@font/notosans_semibold"/>


        <TextView
            android:id="@+id/other_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/others"
            android:textSize="18sp"
            android:paddingHorizontal="25dp"
            android:paddingVertical="28dp"
            android:background="@color/white"
            android:fontFamily="@font/notosans_semibold"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>